//----------------------Skeleton Code--------------------//
#include <WiFi.h>
#include <WiFiUdp.h>
#include <ArduinoOTA.h>

//    Can be client or even host   //
#ifndef STASSID
#define STASSID "gvv"  // Replace with your network credentials
#define STAPSK  "abcd"
#endif

const char* ssid = STASSID;
const char* password = STAPSK;


void OTAsetup() {
  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);
  while (WiFi.waitForConnectResult() != WL_CONNECTED) {
    delay(5000);
    ESP.restart();
  }
  ArduinoOTA.begin();
}

void OTAloop() {
  ArduinoOTA.handle();
}

//-------------------------------------------------------//

  int Q1=0,Q2=1,Q3=0,t1,d2,t3;
  const int U_pin = 2;
  const int V_pin = 3;
  const int W_pin = 5;
void setup(){
  OTAsetup();

  //-------------------//
  // Custom setup code //
  //-------------------//
 pinMode(2, OUTPUT);
 pinMode(3, OUTPUT);
 pinMode(5, OUTPUT);

}

void loop() {
  OTAloop();
  delay(10); 

  t1 = !Q3;
  d2 = Q1;
  t3 = Q2;
  Q1 = (t1 && Q1) || (!t1 && !Q1);
  Q2 = d2;
  Q3 = (t3 && Q3) || (!t3 && !Q3);


  // If no custom loop code ensure to have a delay in loop
  //-------------------//
  // Custom loop code  //
  //-------------------//
   digitalWrite(2, Q1);
   digitalWrite(3, Q2);
   digitalWrite(5, Q3);
   delay(5000);
}
